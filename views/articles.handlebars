    <p id="title{{this.number}}">{{this.title}}</p>
    <p id="link{{this.number}}">{{this.link}}</p>
    <button id="{{this.number}}" class="comment_button">Comment</button>
    <button id="{{this.number}}" class="delete_article_button">Delete article</button>
  </div>
  {{/each}}
</ul>
